<div class="mini-hero">
    <div class="background-image"></div>
    <p class="title">
        <%= @vendor.name %>
    </p>
</div>

<div class="container">
    <div class="row vendor-bar">
        <div class="col-sm-2">
            <p class="meta">
                Cuisine
            </p>
            <p class="data">
                <%= @vendor.cuisine %>
            </p>
        </div>
        <div class="col-sm-2">
            <p class="meta">
                Hours
            </p>
            <p class="data">
                <%= @vendor.open_at %> - <%= @vendor.close_at %>
            </p>
        </div>
        <div class="col-sm-2">
            <p class="meta">
                Distance
            </p>
            <p class="data">
                TODO: location
            </p>
        </div>
        <div class="col-sm-2">
            <p class="meta">
                Address
            </p>
            <p class="data">
                TODO: location
            </p>
        </div>
        <div class="col-sm-2">
            <p class="meta">
                Phone
            </p>
            <p class="data">
                <%= @vendor.phone %>
            </p>
        </div>
        <div class="col-sm-2">
            <p class="meta">
                Delivery Minimum
            </p>
            <p class="data">
                <%= number_to_currency @vendor.delivery_minimum %>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="menu">
            <div class="col-sm-12 col-md-3 col-lg-2">
                <ul class="nav nav-pills nav-stacked menu-sections">
                    <li class="dropdown-header">MENU SECTIONS</li>
                    <li role="presentation" class="active"><a href="#breakfast">Breakfast</a></li>
                    <li role="presentation"><a href="#brunch">Brunch</a></li>
                    <li role="presentation"><a href="#lunch">Lunch</a></li>
                    <li role="presentation"><a href="#dinner">Dinner</a></li>
                    <li role="presentation"><a href="#dessert">Dessert</a></li>
                </ul>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-8">
                <div class="menu-contents">
                    <h1 id="breakfast">Menu</h1>
                    <% @menu.products.each do |product| %>
                        <%= render partial: 'vendors/menu_item', locals: { item: product } %>
                    <% end %>
                </div>
            </div>

            <div class="col-sm-12 col-md-3 col-lg-2">
                <%= render 'payments/cart' %>
            </div>
        </div>
    </div>
</div>
